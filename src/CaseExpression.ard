-- Без fuel у меня ломается termination check, но что вернуть в случае 0 я не понимаю.
-- По сути верно свойство, что fuel >= n => если fuel = 0 => n = 0 => понятно, что вернуть.
-- Но это звучит слишком запутанно и мне кажется решается более элегантно.

\func divmod (n m : Nat) (p : m /=' 0) : DivMod n m => divModfuel n n m p
  \where \func divModfuel (fuel n m : Nat) (p : m /=' 0) : DivMod n m
    \elim fuel
      | 0 => {?}
      | suc t =>
        \case total_comparsion n m \with {
          | inl a => divRem 0 n a (rewrite *-comm idp)
          | inr b => \case b \with {
            | inl a => divModGe a (divmod.divModfuel t (n -' m) m p)
            | inr b1 => divRem 1 0 (notEqImplLeZero p) (rewrite (inv b1, *-comm) idp)
          }
        }

\func divAndMod (n m : Nat) (p : DivMod n m) : \Sigma Nat Nat \elim p
  | divRem d r p t => (d, r)


