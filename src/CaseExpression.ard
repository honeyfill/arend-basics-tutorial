-- В этот момент я был очень сильно удивлен, что, засчет "p : n > m = true", Arend все понял.
\func MinusAddPos (n m : Nat) (p : n > m = true) : n -' m + m = n \elim n, m
  | 0, 0 => idp
  | suc t, 0 => idp
  | suc t, suc k => pmap suc (MinusAddPos t k p)

\func >sucImp> {n m : Nat} (p : n > suc m = true) : n > m = true \elim n, m
  | suc n, 0 => idp
  | suc n, suc m => >sucImp> p

-- Я не очень понял, как указать, что я хочу сделать 2 rewrite в одном rewrite в разных позициях.
\func sucDmult {n : Nat} (m : Nat) : suc n * m = n * m + m =>
  rewrite {2} *-comm (rewrite {1} *-comm idp)

\func foldAddMinus {n m : Nat} (p : n > m = true) : n = n -' m + m =>
  inv (MinusAddPos n m p) *> idp

\func secondAddComm {m d r : Nat} : d * m + r + m = d * m + m + r =>
  rewrite +-assoc (rewrite {2} +-comm (rewrite (inv +-assoc) idp))

\func divModGe {n m : Nat} (p : n > m = true) (q : DivMod (n -' m) m) : DivMod n m \elim q
  | divRem d r q1 p1 =>
    divRem (d + 1) r q1 (rewrite (sucDmult m, inv secondAddComm, foldAddMinus p) (pmap (\lam x => x + m) p1))

\func \infix 1 /=' {A : \Type} (a a' : A) => (a = a') -> Empty

\func notEqImplLeZero {m : Nat} (p : m /=' 0) : 0 < m = true \elim m
  | 0 => absurd (p idp)
  | suc t => idp

